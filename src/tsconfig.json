{
	"compileOnSave"  : false,
	"compilerOptions": {
		"target"                : "es2015",
		"moduleResolution"      : "node",
		"strictNullChecks"      : true,
		"sourceMap"             : true,
		"declaration"           : false,
		"emitDecoratorMetadata" : true,
		"experimentalDecorators": true,
		"removeComments"        : true,
		"importHelpers"         : true,
		"downlevelIteration"    : true,
		"typeRoots"             : ["../node_modules/@types"],
		"lib"                   : ["es2017", "dom"],
		"module"                : "commonjs",
		"baseUrl"               : "./",
		"outDir"                : "../dist"
	},
	"include"        : [
		"./"
	],
	"exclude"        : []
}